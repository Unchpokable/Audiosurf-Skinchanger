<Application x:Class="SkinChangerRestyle.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SkinChangerRestyle"
             xmlns:viewModel="clr-namespace:SkinChangerRestyle.MVVM.ViewModel"
             xmlns:view="clr-namespace:SkinChangerRestyle.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ButtonStyle.xaml"/>
                <ResourceDictionary Source="Themes/ProgressBarStyle.xaml"/>
                <ResourceDictionary Source="Themes/ScrollViewerStyle.xaml"/>
                <ResourceDictionary Source="Themes/ScrollbarStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:SkinPreviewModel}">
                <view:SkinPreview/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
