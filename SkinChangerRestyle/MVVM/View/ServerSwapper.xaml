            </Grid>


            <StatusBar Grid.Row="2" Background="#FF8536ef" Margin="0,0,0,-2">
                <StatusBarItem>
                    <TextBlock Text="{Binding Status}" Foreground="#FFE6E6E6" FontFamily="ExoSoft-Regular ☞" FontSize="14"/>
                </StatusBarItem>
            </StatusBar>

            
        </Grid>
    </Border>
</UserControl>
