<Window x:Class="SkinChangerRestyle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkinChangerRestyle"
        xmlns:properties="clr-namespace:SkinChangerRestyle.Properties"
        xmlns:viewModel="clr-namespace:SkinChangerRestyle.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="480" Width="850"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="Audiosurf Skin Changer">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    
    <Border
            CornerRadius="15">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Resources/bg.png" Stretch="UniformToFill"></ImageBrush>
            </Grid.Background>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Margin="10 5 0 0"
                        CornerRadius="20">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="1 0" StartPoint="0.5,0">
                            <GradientStop Color="#c9c9c9" Offset="0.9"/>
                            <GradientStop Color="#a0a0a0"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <TextBlock FontFamily="/Fonts/#a Astro Space"
                               Text="Menu"
                               FontSize="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0 2 10 0"/>
                </Border>
                
                
                <Button Grid.Row="1"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        Content="Add new .askin file"
                        FontSize="10">
                </Button>
                <Button Grid.Row="2"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        Content="Create skin file from folder"
                        FontSize="10">
                </Button>
                <Button Grid.Row="3"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        Content="Open skins folder"
                        FontSize="10">
                </Button>
                <Button Grid.Row="4"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        Content="Open game textures folder"
                        FontSize="10">
                </Button>
                <Button Grid.Row="5"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        Content="Open skin editor"
                        FontSize="10">
                </Button>

                <Border Grid.Row="6"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="10"
                        Margin="10 10 10 20">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5 0.9" StartPoint="0.5,0">
                            <GradientStop Color="#a0a0a0 " Offset="0.9"/>
                            <GradientStop Color="#c9c9c9"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>


                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Column="2"
                    Grid.Row="2"
                    CornerRadius="20"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Height="40"
                    Width="200"
                    Margin="2 5 0 0">
                <Border.Background>
                    <LinearGradientBrush EndPoint=".5 0" StartPoint="0 1">
                        <GradientStop Color="#a0a0a0 " Offset="0.9"/>
                        <GradientStop Color="#c9c9c9"/>
                    </LinearGradientBrush>
                </Border.Background>

                <TextBlock FontFamily="/Fonts/#a Astro Space"
                               Text="My Skins"
                               FontSize="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10 2 10 0"/>
            </Border>
            <Grid Grid.Row="2"
                  Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <ContentControl Grid.Row="1"
                                Margin="0 -10 0 0"
                                Content="{Binding CurrentView}">
                    
                </ContentControl>
            </Grid>
        </Grid>
    </Border>

</Window>
