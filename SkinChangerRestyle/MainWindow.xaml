<Window x:Class="SkinChangerRestyle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkinChangerRestyle"
        xmlns:properties="clr-namespace:SkinChangerRestyle.Properties"
        mc:Ignorable="d"
        Height="480" Width="850"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border
            CornerRadius="15">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Resources/bg.png" Stretch="UniformToFill"></ImageBrush>
            </Grid.Background>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button Grid.Row="1"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        ContentStringFormat="Add new .askin file">
                </Button>
                <Button Grid.Row="2"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        ContentStringFormat="Create skin file from folder">
                </Button>
                <Button Grid.Row="3"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        ContentStringFormat="Open skins folder">
                </Button>
                <Button Grid.Row="4"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        ContentStringFormat="Open game textures folder">
                </Button>
                <Button Grid.Row="5"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        ContentStringFormat="Open skin editor">
                </Button>

                <Border Grid.Row="6"
                        Background="#c9c9c9"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="10"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="250"
                        Height="110">
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   FontFamily="/Fonts/#a Astro Space"
                                   Text="Current Skin:"
                                   Margin="10 10 0 0"
                                   FontSize="13"/>
                        
                        <!-- Строка не более 14 символов, больше не влезает -->
                        <TextBlock Grid.Row="0"
                                   FontFamily="/Fonts/#a Astro Space"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Margin="0 0 10 0"
                                   Text="Undefined"
                                   FontSize=" 15"
                                   x:Name="currentSkinLabel"/>


                        <TextBlock Grid.Row="1"
                                   FontFamily="/Fonts/#a Astro Space"
                                   Text="Loading:"
                                   VerticalAlignment="Bottom"
                                   Margin="10 0 0 0"/>
                        
                        <!-- Строка не более 20 символов, больше не влезает -->
                        <TextBlock Grid.Row="1"
                                   FontFamily="/Fonts/#a Astro Space"
                                   Text="Undefider"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Right"
                                   Margin="0 0 10 0"
                                   x:Name="currentLoadingSkinLabel"/>
                        
                        <ProgressBar Grid.Row="2" 
                                    Style="{StaticResource ChangerProgressBar}"
                                     VerticalAlignment="Bottom"
                                     HorizontalAlignment="Center"
                                     Width="230"
                                     Height="20"
                                     Margin="0 0 0 10"
                                     x:Name="skinloadingProgressBar"
                                     Maximum="100"
                                     Minimum="0" LargeChange="100"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>

</Window>
