<Window x:Class="SkinChangerRestyle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkinChangerRestyle"
        xmlns:properties="clr-namespace:SkinChangerRestyle.Properties"
        mc:Ignorable="d"
        Height="480" Width="850"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border
            CornerRadius="15">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Resources/bg.png" Stretch="UniformToFill"></ImageBrush>
            </Grid.Background>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button Grid.Row="1"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        ContentStringFormat="Add new .askin file">
                </Button>
                <Button Grid.Row="2"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        ContentStringFormat="Create skin file from folder">
                </Button>
                <Button Grid.Row="3"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        ContentStringFormat="Open skins folder">
                </Button>
                <Button Grid.Row="4"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        ContentStringFormat="Open game textures folder">
                </Button>
                <Button Grid.Row="5"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="10 5 10 5"
                        ContentStringFormat="Open skin editor">
                </Button>
            </Grid>
        </Grid>
    </Border>

</Window>
